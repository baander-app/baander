
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["node"],
    "lib": [
      "ES2023",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "noEmit": true
  },
  "include": [
    "src/renderer/**/*.ts",
    "src/renderer/**/*.tsx",
    "src/shared/**/*.ts",
    "../resources/app/**/*.ts",
    "../resources/app/**/*.tsx",
    "typings/**/*.d.ts",
    "src/preload/types/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "dist-electron",
    "release"
  ]
}
